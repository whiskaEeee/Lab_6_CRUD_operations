@model Store

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Store</h2>
            <hr/>
        </div>
        <input type="hidden" asp-for="StoreId" />
        <div class="mb-3">
            <label asp-for="StoreName"></label>
            <input asp-for="StoreName" type="text" class="form-control" />
            <span asp-validation-for="StoreName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Specialization"></label>
            <input asp-for="Specialization" type="text" class="form-control" />
            <span asp-validation-for="Specialization" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="INN"></label>
            <input asp-for="INN" type="text" class="form-control" />
            <span asp-validation-for="INN" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" type="text" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DirectorId"></label>
            <input asp-for="DirectorId" type="text" class="form-control" />
            <span asp-validation-for="DirectorId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning" style="width: 150px">Edit</button>
        <a asp-controller="Store" asp-action="shop" class="btn btn-secondary" style="width: 150px">
            Back To List
        </a>
    </div>
</form>